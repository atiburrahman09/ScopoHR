@model ScopoHR.Core.ViewModels.ReportFilteringViewModel
@{
    ViewBag.Title = "EidBonusReport";
}


<div class="col-sm-12">
    <section class="box box-solid">
        <header class="box-header with-border">
            <h3 class="box-title">Eid Bonus Report</h3>
        </header>
        <div class="box-body">
            <div class="form-horizontal">

                @using (Html.BeginForm("GetEidBonusReport", "Report", FormMethod.Post, new { target = "_blank" }))
                {
                    <div class="form-group">
                        <label class="col-sm-1">Floor</label>
                        <div class="col-sm-2">
                            @Html.DropDownListFor(model => model.Floor, ViewBag.floorList as SelectList, "Select Floor", new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.ProductionFloorLineID)
                        </div>

                        <label class="col-sm-1">Is Bank</label>
                        <div class="col-sm-2">
                            @Html.DropDownListFor(model => model.BankSalary, ViewBag.IsBankSalaryList as SelectList, "Select", new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(model => model.BankSalary)
                        </div>
                        <label class="col-sm-1">Company</label>
                        <div class="col-sm-2">
                            @Html.DropDownListFor(model => model.Company, ViewBag.CompanyList as SelectList, "Select Company", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Company)
                        </div>
                        <div class="col-sm-2 pull-right">
                            <input type="submit" formtarget="_blank" class="btn btn-block btn-success" value="Get Report" />
                        </div>
                    </div>


                }
            </div>
        </div>

    </section>
</div>

