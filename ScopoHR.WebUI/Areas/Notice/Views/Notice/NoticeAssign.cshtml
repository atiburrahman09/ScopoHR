@{
    ViewBag.Title = "Notice Assign";
}
<div class="row" ng-controller="noticeAssignCtrl" ng-init="init()">
    <div class="col-md-3 column">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">Notice List</h3>
            </div>
            <div class="box-body ">
                <div class="has-feedback">
                    <input type="text" placeholder="Search Notice" class="form-control margin-bottom" ng-model="searchList" />
                    <span class="glyphicon glyphicon-search form-control-feedback"></span>
                </div>
                <ul class="nav nav-pills nav-stacked" style="height:678px;overflow:auto">
                    <li ng-repeat="l in noticeList | filter : searchList" ng-class="{active:l.selected}">
                        <a href="" ng-click="selected($index)">
                            <i class="fa fa-file-text-o"></i> {{l.NoticeTitle}}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-9 column">
        <section class="box box-solid">
            <header class="box-header with-border">
                <h3 class="box-title">Notice</h3>
                <button class="btn btn-sm btn-flat btn-default" ng-click="newMode()" style="float:right"> <i class="glyphicon glyphicon-plus text-green"></i> New</button>             
            </header>
            <form class="form-horizontal" name="noticeForm" ng-submit="createUpdateNotice(noticeDetails)" novalidate>
                <div class="box-body" style="height:697px;">

                    <div class="col-md-12">
                        <div class="form-group">
                            <h4>Notice Title</h4>
                            <input type="text" ng-model="noticeDetails.NoticeTitle" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <h4>Notice Details</h4>
                            <textarea type="text"  mentio  mentio-typed-text="typedTerm"  mentio-items="people | filter:label:typedTerm" Columns=60 Rows=10 class="ckeditor form-control" mentio-iframe-element="iframeElement"  ng-model="noticeDetails.NoticeDetail" ></textarea>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <input type="submit" value="Save" class="btn btn-success pull-right" />
                </div>
            </form>
        </section>
        <!-- /. box -->
    </div>
</div>