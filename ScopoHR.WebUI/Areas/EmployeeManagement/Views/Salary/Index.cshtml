@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" ng-controller="salarySheetCtrl" ng-init="initial()">

    <div class="col-sm-12 column">
        <section class="box box-solid">
            <header class="box-header with-border">
                <h3 class="box-title">Salary Sheet</h3>
            </header>
            <form class="form-horizontal" name="salaryForm" ng-submit="searchSalary(salary)" novalidate>
                <div class="box-body">
                    <div class="form-group">
                        <label class="col-lg-1">Year</label>
                        <div class="col-lg-2">
                            <select class="form-control" ng-model="salary.YearId"
                                    ng-options="year.YearId as year.YearName for year in yearList" required>
                                <option value="">Select Year</option>
                            </select>
                        </div>
                        <label class="col-lg-1">Month</label>
                        <div class="col-lg-2">
                            <select class="form-control" ng-model="salary.MonthId"
                                    ng-options="month.MonthId as month.MonthName for month in monthList" required>
                                <option value="">Select Month</option>
                            </select>
                        </div>
                        <label class="col-lg-1"><b>Department Name</b></label>
                        <div class="col-lg-2">
                            <select class="form-control" ng-model="salary.DepartmentID"
                                    ng-options="department.DepartmentID as department.DepartmentName for department in departmentList">
                                <option value="">Select Department</option>
                            </select>

                        </div>
                        <label class="col-lg-1"><b>Floor</b></label>
                        <div class="col-lg-2">
                            <select class="form-control" ng-model="salary.FloorID"
                                    ng-options="floor.Floor as floor.Floor for floor in productionFloorList"
                                    required
                                    >
                                <option value="">Select Floor</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        <input type="submit" class="btn btn-success" value="Search" />
                    </div>
                </div>
            </form>
            <header class="box-header with-border">
                <h3 class="box-title">Salary List</h3>
            </header>
            <br />
            <div class="divList" style="height: 700px !important; overflow:auto;">
                <table class="table table-hover table-striped table-bordered">
                    <tr>
                        <td><b>Card No</b></td>
                        <td><b>Employee Name</b></td>
                        <td><b>Department</b></td>
                        <td><b>Salary</b></td>
                    </tr>
                    <tr ng-repeat="data in salaryList">

                        <td>
                            {{data.CardNo}}
                        </td>

                        <td>
                            {{data.EmployeeName}}
                        </td>
                        <td>
                            {{data.DepartmentName}}
                        </td>

                        <td>
                            {{data.Salary}}
                        </td>

                    </tr>
                </table>
            </div>
        </section>
    </div>

</div>


