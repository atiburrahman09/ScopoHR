<div class="row" ng-controller="promotionCtrl" ng-init="init()" ng-cloak>
    <div class="col-md-4 column">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">Employee Promotion Details</h3>
            </div>
            <br />
            <div class="form-group">
                <div class="col-sm-12">
                    <div class="has-feedback">
                        <input type="text" ng-model="employee.ReportToModel"
                               placeholder="Enter name or card no"
                               uib-typeahead="emp as emp.EmployeeName + ' : '+ emp.CardNo for emp in getEmployeeByKeyword($viewValue)"
                               typeahead-on-select="employeeSelected($item, $model, $label)"
                               class="form-control">
                        <span class="glyphicon glyphicon-search form-control-feedback text-muted"></span>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="box-body no-padding">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Card No</th>
                            <th>Employee Name</th>
                            <th>Promotion Date</th>
                            <th>Designation</th>
                            <th>Remarks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="s in employeePromotionData">
                            <td>
                                {{s.CardNo}}
                            </td>
                            <td>
                                {{s.EmployeeName}}
                            </td>
                            <td>
                                {{s.PromotionDate}}
                            </td>
                            <td>
                                {{s.NewDesignation}}
                            </td>
                            <td>
                                {{s.Remarks}}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-8 column">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">Employee Promotion</h3>
            </div>
            <form class="form-horizontal" name="promotionForm" novalidate ng-submit="saveInformation()">
                <div class="box-body">
                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="col-lg-12">Department</label>
                            <div class="col-lg-12">
                                <select class="form-control" ng-model="employeePromotion.DepartmentID"
                                        ng-options="department.DepartmentID as department.DepartmentName for department in departmentList"
                                        ng-change="getDesignationList(employeePromotion.DepartmentID)"
                                        required>
                                    <option value="">Select Department</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-lg-12">New Designation</label>
                            <div class="col-lg-12">
                                <select class="form-control" ng-model="employeePromotion.NewDesignationID"
                                        ng-options="designation.DesignationID as designation.DesignationName for designation in designationList"
                                        required>
                                    <option value="">Select Designation</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="col-lg-12">Promotion Date</label>
                            <div class="col-lg-12">
                                <input id="PromotionDate" type="text" class="form-control default-datepicker"
                                       ng-model="employeePromotion.PromotionDate"
                                       ng-blur="bind('PromotionDate','employeePromotion')"
                                       required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-lg-12">Remarks</label>
                            <div class="col-lg-12">
                                <input type="text" placeholder="Remarks" class="form-control" ng-model="employeePromotion.Remarks" />
                            </div>
                        </div>

                    </div>

                </div>
                <div class="footer">
                    <div class="form-group col-md-12">
                        <div class="col-sm-offset-6 col-sm-6">
                            <div class="pull-right">
                                <button type="reset" class="btn btn-warning btn-flat btn-sm"><i class="fa fa-close"></i> Reset</button>
                                <button type="submit" class="btn btn-success btn-flat btn-sm"><i class="fa fa-save"></i> Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>