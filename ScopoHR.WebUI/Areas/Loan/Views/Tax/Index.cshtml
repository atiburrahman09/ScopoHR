<div class="row" ng-controller="taxCtrl" ng-init="init()" ng-cloak>
    <div class="col-md-4 column">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">Tax List</h3>
            </div>
            <br />
            <div class="form-group">
                <div class="col-sm-12">
                    <div class="has-feedback">
                        <input type="text" ng-model="employee.CardNo"
                               placeholder="Enter name or card no"
                               uib-typeahead="emp as emp.EmployeeName + ' : '+ emp.CardNo for emp in getEmployeeByKeyword($viewValue)"
                               typeahead-on-select="employeeSelected($item, $model, $label)"
                               class="form-control">
                        <span class="glyphicon glyphicon-search form-control-feedback text-muted"></span>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="box-body no-padding">
                <ul class="nav nav-pills nav-stacked" style="height:700px; overflow:auto">
                    <li ng-repeat="t in taxList | filter : searchList" ng-class="{active:t.selected}">
                        <a href="" ng-click="taxSelected(t)">
                            <ul class="nav">
                                <li><i class="fa fa-money" ng-class="{'text-blue':!t.selected}"></i>Amount: {{t.Amount}}</li>
                                <li><i class="glyphicon glyphicon-calendar" ng-class="{'text-blue':!t.selected}"></i>Year:{{t.Year}}</li>
                            </ul>
                        </a>
                    </li>
                </ul>
               
            </div>
        </div>
    </div>

    <div class="col-md-8 column">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">Tax</h3>
            </div>
            <form class="form-horizontal" name="taxForm" novalidate ng-submit="saveInformation()">
                <div class="box-body">
                    <div class="form-group">
                       
                        <div class="col-md-3">
                            <label class="col-lg-12">Yearly Tax Amount</label>
                            <div class="col-lg-12">
                                <input type="number" placeholder="Amount" class="form-control" ng-model="tax.YearlyAmount" ng-change="getMonthlyAmount(tax.YearlyAmount)" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="col-lg-12">Monthly Tax Amount</label>
                            <div class="col-lg-12">
                                <input type="number" placeholder="Amount" class="form-control" ng-model="tax.Amount" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="col-lg-12">Tax Year</label>
                            <div class="col-lg-12">
                                <select class="form-control" ng-model="tax.Year"
                                        ng-options="year.YearId as year.Year for year in yearList" required>
                                    <option value="">Select Year</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="col-lg-12"> &nbsp</label>
                            <button type="submit" class="btn btn-success btn-flat btn-sm"><i class="fa fa-save"></i> Save</button>
                        </div>
                    </div>
                </div>
                @*<div class="footer">
                    <div class="form-group col-md-12">
                        <div class="col-sm-offset-6 col-sm-6">
                            <div class="pull-right">
                                <button type="reset" class="btn btn-warning btn-flat btn-sm"><i class="fa fa-close"></i> Reset</button>
                                
                            </div>
                        </div>
                    </div>
                </div>*@
            </form>
        </div>
    </div>

</div>
